<%- include("partials/header") %>
<%- include("partials/navbar") %> 

    <br>
    <div class="container">
        <div class="row">
            <div class="com-md-4">
                <div class="card" style="width: 20rem; margin-top: 2rem;">
                <div class="card-body" style="background-color: rgb(196, 194, 191);">
                    <img src="/uploads/images/<%= student.image %> " alt="">
                </div>
                </div>
            </div>
            <div class="col-md-8">
                <br>
                <div class="container form-cont">
                    <h1>Edit Details</h1>
            <div class="edit">
                <form action="/details/<%= student._id %>?_method=PATCH "method="POST" enctype="multipart/form-data">
                <label for="name">Name</label>
                <input class="form-control" type="text" value="<%= student.name %> " required name="name">
                
                <label for="age">Age</label>
                <input class="form-control" type="number" value="<%=student.age%>" required name="age">
                
                <br>
                <label for="gender">Gender</label>
                    <select name="gender" required id="gender">
                        <% for(let g of gender) { %>
                            <option value="<%= g %>" <%= student.g===g ? selected : "" %> > <%= g %> </option>
                        <% } %>
                    </select>
                <br>
                <label for="grade">Grade</label>
                    <select name="grade" id="grade">
                        <% for(let g of grade) { %>
                            <option value="<%= g %>" <%=student.g===g %> ? selected : "" > <%= g %> </option>
                        <% } %>
                    </select>
                
                <br>
                <label for="stream">Stream</label>
                    <select name="stream" id="stream">
                        <% for(let s of stream) { %>
                            <option value="<%=s%>" <%=student.s===s %> ? selected : "" > <%=s%> </option>
                        <% } %>
                    </select>
                    <br>
                <label for="form">Form</label>
                    <select name="form" id="form">
                            <% for(let f of form) { %>
                                <option value="<%=f%>" <%=student.f===f %> ? selected : "" > <%=f%> </option>
                            <% } %>
                    </select>
                <br>
                <label for="image">Upload Image</label>
                <input type="file" name="image" id="image">
                <br>
                <button class="btn btn-warning">Submit Changes</button>
                <br> <br>
            </form>
                <a href="/details/<%= student._id %>"> <button class="btn btn-success">Go Back</button></a>

            </div>
            <br>
            

                </div>
            </div>
        </div>
    
    </div>

<%- include("partials/footer") %> 